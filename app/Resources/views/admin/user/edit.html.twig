{% embed "base.html.twig" with {sidebar: 0, title: "Éditer l'utilisateur " ~ user.username} %}
    {% block body %}
        <h1>Éditer l'utilisateur {{ user.username }}</h1>
        <h2>Rôles</h2>
        <form action="" method="post">

            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th></th>
                    <th>Nom</th>
                    <th>Description</th>
                </tr>
                </thead>
                <tbody>
                {% for role in roles %}
                    <tr>
                        <td>
                            <input type="checkbox" {% if user.explicitlyGranted(role.role) %}checked{% endif %} name="role[]" value="{{ role.id }}">
                        </td>
                        <td>{{ role.nom }}</td>
                        <td>{{ role.description }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <button class="btn btn-primary" type="submit">Modifier</button>
        </form>

    {% endblock %}
{% endembed %}