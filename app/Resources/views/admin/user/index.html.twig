{% embed 'base.html.twig' with {sidebar: 0, title: 'Administrer les utilisateurs'} %}

    {% block body %}
        <div class="container offset">
            <h1>Affichage des utilisateurs</h1>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Email</th>
                    <th>Créée le</th>
                    <th>Dernière connexion</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email}}</td>
                        <td>{{ user.createdAt|date('d/m/Y') }}, à {{ user.createdAt|date('H:i:s') }}</td>
                        <td>{{ user.lastLogin|date('d/m/Y') }}, à {{ user.lastLogin|date('H:i:s') }}</td>
                        <td>
                            <a class="btn btn-primary btn-sm" style="margin-right: 10px;" href="{{ path('admin_user_edit', {'username': user.username}) }}">Éditer</a>
                            <a class="btn btn-danger btn-sm" href="{{ path('admin_user_delete', {'id': user.id}) }}">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    {% endblock %}

{% endembed %}