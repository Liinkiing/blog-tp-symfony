{% embed 'base.html.twig' with {sidebar: 0, title: 'Connexion'} %}

    {% block body %}
        <h1>Se connecter / S'inscrire</h1>
        <div class="row">
            <div class="col-md-6">
                <div class="well bs-component">
                    <form class="form-horizontal" action="" method="post">
                        <fieldset>
                            <legend>Se connecter</legend>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" for="username">Nom d'utilisateur</label>
                                <div class="col-lg-9">
                                    <input required id="username" type="text" class="form-control" name="_username" value="{{ last_username }}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label" for="username">Mot de passe</label>
                                <div class="col-lg-9">
                                    <input required id="password" type="password" class="form-control" name="_password">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-9 col-lg-offset-3">
                                    <button type="submit" class="btn btn-primary">Envoyer</button>
                                </div>
                            </div>

                        </fieldset>
                    </form>

                </div>

            </div>
            <div class="col-md-6">
                <div class="well bs-component">
                    <form class="form-horizontal" action="{{ path('register') }}" method="post">
                        <fieldset>
                            <legend>S'inscrire</legend>
                            <div class="form-group">
                                <label class="col-lg-4 control-label" for="username">Nom d'utilisateur</label>
                                <div class="col-lg-8">
                                    <input required id="username" type="text" class="form-control" name="_username">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label" for="email">Adresse mail</label>
                                <div class="col-lg-8">
                                    <input required id="email" type="email" class="form-control" name="_email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label" for="password">Mot de passe</label>
                                <div class="col-lg-8">
                                    <input required id="password" type="password" class="form-control" name="_password[0]">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label" for="username">RÃ©peter le mot de passe</label>
                                <div class="col-lg-8">
                                    <input required id="password" type="password" class="form-control" name="_password[1]">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-8 col-lg-offset-4">
                                    <button type="submit" class="btn btn-primary">Envoyer</button>
                                </div>
                            </div>

                        </fieldset>
                    </form>

                </div>
            </div>
        </div>
    {% endblock %}


{% endembed %}