{% embed 'base.html.twig' %}

    {% block body %}
        <h1>Login</h1>
        <form action="" method="post">
            {% if error %} <div>{{ error.message }}</div>{% endif %}
            <input type="text" name="_username" placeholder="Nom d'utilisateur" value="{{ last_username }}">
            <input type="password" name="_password" placeholder="Mot de passe">
            <button type="submit">Envoyer</button>
        </form>
    {% endblock %}


{% endembed %}