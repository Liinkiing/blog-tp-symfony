{% embed 'base.html.twig' with {title: article.title} %}

    {% block body %}
        <h1>{{ article.title }}</h1>
        <p>{{ article.content }}</p>
        <hr>
        <h2>Commentaires</h2>
        {% if app.user %}
            <form action="{{ path('comment_new', {'slug': article.slug}) }}" method="post">
                <div class="form-group">
                    <textarea class="form-control" name="comment" id="" cols="30"  placeholder="Ajouter votre commentaire" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Envoyer</button>
                </div>
            </form>
        {% endif %}
        {% for comment in article.comments %}
            <span>{{ comment.message }}</span>
            <span>{{ comment.author.createdAt|date('d/m/Y H:i')  }}</span>
        {% endfor %}
    {% endblock %}

{% endembed %}